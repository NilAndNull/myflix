<section class="invite container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <form class="invite">
        <header>
          <h1>Invite a friend to join MyFlix!</h1>
        </header>
        <fieldset>
          <div class="form-group">
            <label>Friend's Name</label>
            <div class="row">
              <div class="col-sm-4">
                <input class="form-control" type="text"></input>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Friend's Email Address</label>
            <div class="row">
              <div class="col-sm-4">
                <input class="form-control" type="email"></input>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Invitation Message</label>
            <div class="row">
              <div class="col-sm-6">
                <textarea class="form-control" rows=6> Please join this really cool site!</textarea>
              </div>
            </div>
          </div>
        </fieldset>
        <fieldset class="form-group action">
          <input type="submit" value="Send Invitation" class="btn btn-default"></input>
        </fieldset>
      </form>
    </div>
  </div>
</section>

