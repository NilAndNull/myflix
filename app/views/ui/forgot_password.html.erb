<section class="forgot_password container">
  <div class="row">
    <div class="col-sm-10 col-bg-offset-1">
      <form class="sign_in">
        <header>
          <h1>Forgot Password?</h1>
          <p>We will send you an email with a link that you can use to reset your password.</p>
        </header>
        <div class="form-group">
          <label>Email Address</label>
          <div class="row">
            <div class="col-sm-4">
              <input class="form-control" type="email"></input>
            </div>
          </div>
        </div>
        <div class="form-group action">
          <input type="submit" value="Send Email" class="btn btn-default"></input>
        </div>
      </form>
    </div>
  </div>
</section>
