<section class="account container">
  <div class="row">
    <div class="col-md-10 col-lg-offset-1">
      <form class="form-horizontal">
        <header>
          <h1>Your Account</h1>
        </header>
        <fieldset>
          <div class="form-group">
            <label class="control-label col-sm-3">Email Address</label>
            <div class="col-sm-4">
              <input class="form-control" type="email"></input>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-3">Password</label>
            <div class="col-sm-4">
              <input class="form-control" type="password"></input>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-3">Confirm Password</label>
            <div class="col-sm-4">
              <input class="form-control" type="password"></input>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-3">Full Name</label>
            <div class="col-sm-4">
              <input class="form-control" type="text"></input>
            </div>
          </div>
        </fieldset>
        <fieldset class="actions form-group">
          <div class="col-sm-8 col-lg-offset-3">
            <input type="submit" value="Update" class="btn btn-default"></input>
            <%= link_to "Cancel" %>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</section>
