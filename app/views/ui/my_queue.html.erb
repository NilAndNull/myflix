<section class="my_queue container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <article>
        <header>
          <h2>My Queue</h2>
        </header>
        <table class="table">
          <thead>
            <tr>
              <th width="10%"> List Order</th>
              <th width="30%"> Video Title</th>
              <th width="10%"> Play</th>
              <th width="20%"> Rating</th>
              <th width="15%"> Genre</th>
              <th width="15%"> Remove</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <input class="form-control" type="text" value="1"></input>
              </td>
              <td>
                <%= link_to "Futurama" %>
              </td>
              <td>
                <%= button_to "Play", nil, class: "btn btn-default" %>
              </td>
              <td>
                <select class="form-group" name="">
                  <option value="5"> 5 Stars</option>
                  <option value="4"> 4 Stars</option>
                  <option value="3"> 3 Stars</option>
                  <option value="2"> 2 Stars</option>
                  <option value="1"> 1 Star</option>
                </select>
              </td>
              <td>
                <%= link_to "TV Shows" %>
              </td>
              <td>
                <%= link_to "", method: :post do %>
                  <i class="glyphicon glyphicon-remove"></i>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <input class="form-control" type="text" value="2"></input>
              </td>
              <td>
                <%= link_to "Family Guy" %>
              </td>
              <td>
                <%= button_to "Play", nil, class: "btn btn-default" %>
              </td>
              <td>
                <select name="">
                  <option value="5"> 5 Stars</option>
                  <option value="4"> 4 Stars</option>
                  <option value="3"> 3 Stars</option>
                  <option value="2"> 2 Stars</option>
                  <option value="1"> 1 Star</option>
                </select>
              </td>
              <td>
                <%= link_to "TV Shows" %>
              </td>
              <td>
                <%= link_to "", method: :post do %>
                  <i class="glyphicon glyphicon-remove"></i>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= button_to "Update Instant Queue", nil, class: "btn btn-default" %>
      </article>
    </div>
  </div>
</section>
