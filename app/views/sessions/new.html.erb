<section class="sign_in container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= bootstrap_form_for :login, html: { class: 'sign_in' } do |f| %>
        <header>
          <h1>Sign In</h1>
        </header>
        <fieldset>
          <%= f.email_field :email, label: 'Email Address' %>
          <%= f.password_field :password %>
        </fieldset>
        <fieldset class="form-group action">
          <%= f.submit "Sign In" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</section>
